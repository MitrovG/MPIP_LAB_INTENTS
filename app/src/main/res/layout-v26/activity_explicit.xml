<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplicitActivity">

    <EditText
        android:id="@+id/etResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etResultTextHint"
        android:inputType="text"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOKText"
        android:background="#00FF00"
        app:layout_constraintTop_toBottomOf="@id/etResultText"
        app:layout_constraintRight_toLeftOf="@id/btnCancel"
        app:layout_constraintLeft_toLeftOf="parent"
       />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancelText"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/etResultText"
        app:layout_constraintLeft_toRightOf="@id/btnOK"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>