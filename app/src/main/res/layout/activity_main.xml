<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/btnStartExplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnStartExplicit"/>

        <Button
            android:id="@+id/btnStartImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnStartImplicit"/>

        <Button
            android:id="@+id/btnShareData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnShareData"/>

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSelectImage"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#01DFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#000000"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>